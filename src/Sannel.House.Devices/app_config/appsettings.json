{
	"Db": {
		"Provider": "sqlite", // sqlite or sqlserver
		"ConnectionString": "Data Source=app_data/data.db"
	},
	"Startup": {
		"VerifyCertTrust": "app_config/Sannel Software - Dev - Personal CA.crt"
	},
	"Authentication": {
		"AuthorityUrl": "https://users.house.dev.local",
		"ApiName": "houseapi"
	},
	"Logging": {
		"LogLevel": {
			"Default": "Debug",
			"System": "Information",
			"Microsoft": "Information"
		}
	},
	"Kestrel": {
		"Endpoints": {
			"HTTPS": {
				"Url": "https://*:443",
				"Certificate": {
					"Path": "app_config/devices.house.dev.local.pfx",
					"Password": "@Password1"
				}
			}
		}
	}
}
